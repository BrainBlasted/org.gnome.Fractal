{
    "app-id": "org.gnome.Fractal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "fractal",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=home"
    ],
    "build-options" : {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Fractal/cargo"
        }
    },
    "modules": [
        {
           "name": "Fractal",
           "buildsystem": "meson",
           "sources": [
               {
                   "type": "archive",
                   "url": "https://gitlab.gnome.org/danigm/fractal/uploads/174c094f6cb0888786c5a4bb39fefbf7/fractal-0.1.16.tar.xz",
                   "sha256": "78376a0aa9f7676c68ac78daf8160718a6fd2df65d181cff02b1bcde4d99a1dd"
               }
           ]
        }
    ]
}
