{
    "app-id": "org.gnome.Fractal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "fractal",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "build-options" : {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Fractal/cargo"
        }
    },
    "modules": [
        {
           "name": "Fractal",
           "buildsystem": "meson",
           "sources": [
               {
                   "type": "archive",
                   "url": "https://gitlab.gnome.org/danigm/fractal/uploads/36451b5e1a1a827df54519ee8cf034f2/fractal-0.1.10.tar.xz",
                   "sha256": "7ba614dc354724f7c2ffec98fcd348c7ed1ae898add281b51036aac0b9199df1"
               }
           ]
        }
    ]
}
