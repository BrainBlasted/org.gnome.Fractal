{
    "app-id": "org.gnome.Fractal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "fractal",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=home"
    ],
    "build-options" : {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Fractal/cargo"
        }
    },
    "modules": [
        {
           "name": "Fractal",
           "buildsystem": "meson",
           "sources": [
               {
                   "type": "archive",
                   "url": "https://gitlab.gnome.org/danigm/fractal/uploads/776c5d3e0da4816713a898aa941ea396/fractal-0.1.17.tar.xz",
                   "sha256": "9f51bd153b10bcb82e28772ee749c009e4ee18d524a47d0076d7459a52820fe3"
               }
           ]
        }
    ]
}
