{
    "app-id": "org.gnome.Fractal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "fractal",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "build-options" : {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Fractal/cargo"
        }
    },
    "modules": [
        {
           "name": "Fractal",
           "buildsystem": "meson",
           "sources": [
               {
                   "type": "archive",
                   "url": "https://gitlab.gnome.org/danigm/fractal/uploads/4a7b474105fcf6be012eba7ab68c5422/fractal-0.1.6.tar.xz",
                   "sha256": "6a52a231d8fbcf6fe7b5ede11cd24dcdce65832ca05a87aceb7e3851065a32a5"
               }
           ]
        }
    ]
}
