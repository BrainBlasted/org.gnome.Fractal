{
    "app-id": "org.gnome.Fractal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "fractal",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "build-options" : {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/Fractal/cargo"
        }
    },
    "modules": [
        {
           "name": "Fractal",
           "buildsystem": "meson",
           "sources": [
               {
                   "type": "archive",
                   "url": "https://gitlab.gnome.org/danigm/fractal/uploads/1738646a87adda6c4169d038ed7cc4e0/fractal-0.1.9.tar.xz",
                   "sha256": "e4eabbcb09fcc02c240af0afe243e856317f0c138b458f558502ef63ef23fc21"
               }
           ]
        }
    ]
}
